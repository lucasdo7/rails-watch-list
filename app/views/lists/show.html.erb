<div class="container">
  <h1><strong>My <%=@list.name%> list</strong></h1>
  <br><br>

    <ul>
    <% @list.bookmarks.each do |l| %>
    <li>
      <div class="card" style="width: 18rem;">
        <img src="<% l.movie.poster_url %>" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%= l.movie.title %></h5>
            <p class="card-text"><%= l.movie.overview %></p>
            <p class="card-text"><%= l.movie.rating %></p>
            <p><%= link_to 'Delete Bookmark', bookmark_path(l), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: 'btn btn-danger' %></p>
          </div>
      </div>
    </li>
    <% end %>
  </ul>

  <%= link_to 'Add a Bookmark', new_list_bookmark_path(@list), class: 'btn btn-success' %> <br>

  <%= link_to "back", lists_path, class: 'btn btn-danger' %>


</div>
